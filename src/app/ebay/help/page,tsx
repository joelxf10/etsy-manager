'use client'

import { useEffect, useState } from 'react'
import { createClient } from '@/lib/supabase'
import { HelpCircle, Plus, Clock, CheckCircle, X, MessageSquare } from 'lucide-react'

export default function EbayHelpPage() {
  const [requests, setRequests] = useState<any[]>([])
  const [loading, setLoading] = useState(true)
  const [showAddModal, setShowAddModal] = useState(false)
  const [newRequest, setNewRequest] = useState({ subject: '', description: '', priority: 1 })
  const supabase = createClient()

  useEffect(() => { loadData() }, [])

  async function loadData() {
    const { data } = await supabase.from('help_requests').select('*, user:users(name, email)').order('created_at', { ascending: false })
    setRequests(data || [])
    setLoading(false)
  }

  async function addRequest() {
    if (!newRequest.subject) return
    const { data: { session } } = await supabase.auth.getSession()
    const { data: user } = await supabase.from('users').select('id').eq('email', session?.user?.email).single()
    await supabase.from('help_requests').insert({
      user_id: user?.id, subject: newRequest.subject, description: newRequest.description, priority: newRequest.priority, status: 'open'
    })
    setShowAddModal(false)
    setNewRequest({ subject: '', description: '', priority: 1 })
    loadData()
  }

  async function updateStatus(id: string, status: string) {
    await supabase.from('help_requests').update({ status }).eq('id', id)
    setRequests(requests.map(r => r.id === id ? { ...r, status } : r))
  }

  const openCount = requests.filter(r => r.status === 'open').length

  if (loading) return <div className="p-8 flex justify-center"><div className="animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-blue-500"></div></div>

  return (
    <div className="p-8">
      <div className="flex justify-between items-center mb-8">
        <div>
          <h1 className="text-2xl font-bold text-gray-900">Help Requests</h1>
          <p className="text-gray-500">{openCount} open requests</p>
        </div>
        <button onClick={() => setShowAddModal(true)} className="flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
          <Plus className="w-5 h-5" /> New Request
        </button>
      </div>

      <div className="bg-white rounded-xl shadow-sm border">
        {requests.length > 0 ? (
          <div className="divide-y">
            {requests.map(req => (
              <div key={req.id} className="p-4 hover:bg-gray-50">
                <div className="flex items-start justify-between">
                  <div className="flex items-start gap-3">
                    <div className={`w-10 h-10 rounded-lg flex items-center justify-center ${req.status === 'open' ? 'bg-yellow-100' : req.status === 'in_progress' ? 'bg-blue-100' : 'bg-green-100'}`}>
                      {req.status === 'open' ? <Clock className="w-5 h-5 text-yellow-600" /> : req.status === 'in_progress' ? <MessageSquare className="w-5 h-5 text-blue-600" /> : <CheckCircle className="w-5 h-5 text-green-600" />}
                    </div>
                    <div>
                      <h3 className="font-medium text-gray-900">{req.subject}</h3>
                      <p className="text-sm text-gray-500 mt-1">{req.description}</p>
                      <div className="flex items-center gap-4 mt-2 text-xs text-gray-400">
                        <span>{req.user?.name}</span>
                        <span>{new Date(req.created_at).toLocaleDateString()}</span>
                      </div>
                    </div>
                  </div>
                  <select value={req.status} onChange={(e) => updateStatus(req.id, e.target.value)} className="text-sm border rounded px-2 py-1">
                    <option value="open">Open</option>
                    <option value="in_progress">In Progress</option>
                    <option value="resolved">Resolved</option>
                  </select>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div className="p-12 text-center">
            <HelpCircle className="w-12 h-12 text-gray-300 mx-auto mb-4" />
            <p className="text-gray-500">No help requests yet</p>
          </div>
        )}
      </div>

      {showAddModal && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
          <div className="bg-white rounded-xl p-6 w-full max-w-md">
            <div className="flex justify-between items-center mb-4">
              <h2 className="text-lg font-bold">New Help Request</h2>
              <button onClick={() => setShowAddModal(false)}><X className="w-5 h-5" /></button>
            </div>
            <div className="space-y-4">
              <div>
                <label className="block text-sm font-medium mb-1">Subject *</label>
                <input type="text" value={newRequest.subject} onChange={(e) => setNewRequest({ ...newRequest, subject: e.target.value })} className="w-full px-3 py-2 border rounded-lg" />
              </div>
              <div>
                <label className="block text-sm font-medium mb-1">Description</label>
                <textarea value={newRequest.description} onChange={(e) => setNewRequest({ ...newRequest, description: e.target.value })} className="w-full px-3 py-2 border rounded-lg" rows={3} />
              </div>
              <div>
                <label className="block text-sm font-medium mb-1">Priority</label>
                <select value={newRequest.priority} onChange={(e) => setNewRequest({ ...newRequest, priority: parseInt(e.target.value) })} className="w-full px-3 py-2 border rounded-lg">
                  <option value={1}>Normal</option>
                  <option value={2}>High</option>
                  <option value={3}>Urgent</option>
                </select>
              </div>
              <button onClick={addRequest} className="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Submit</button>
            </div>
          </div>
        </div>
      )}
    </div>
  )
}
